<div>
    <h1>WebSocket</h1>
    <form id="message-form">
        <input id="message-input" type="text" name="mensaje" placeholder="Mensaje">
        <button id="btn-send" onclick="enviarMensaje()">Send</button>
    </form>
    <div id="messages">
        <ul id="messages-list">
            {{#each mensajes }}
            <li>{{ this }}</li>
            {{/each}}
        </ul>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>